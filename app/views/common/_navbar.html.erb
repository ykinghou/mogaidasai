   <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
   <% if !current_user %>
       <a href="#" data-toggle="modal" data-target="#signup-modal" ) %><span class="glyphicon glyphicon-user"></span> Sign up</a>
       <a href="#" data-toggle="modal" data-target="#login-modal") %><span class="glyphicon glyphicon-log-in"></span> Login</a>
   <% else %>
       <a>Hi!,<%= current_user.email %></a>
       <% if current_user.admin? %>
         <a><%= link_to("Admin Panel", admin_jobs_path) %></a>
       <% else %>
       <% end %>
       <a><%= link_to("退出", destroy_user_session_path, method: :delete) %></a>
   <% end %>
</div>

<nav id="main" class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header" >
      <a class="navbar-brand" href="/">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<i class="fa fa-vine" aria-hidden="true"></i>&nbsp&nbsp&nbsp&nbspENJOY OFFER</a>
