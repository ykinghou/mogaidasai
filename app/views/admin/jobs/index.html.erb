<div class="col-md-12">

  <div class="group">
      <%= link_to("New Job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>


  <h2 class="text-center">Admin Panel</h2>

  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</ht>
        <th>Description</th>
        <th>Post Status</th>
        <th>Last Update</th>
      </tr>
    </thead>

    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td>
              <% if job.is_hidden == true %>
                 No State
              <% else %>
                 Has State
              <% end %>
          </td>
          <td><%= job.updated_at %></td>
          <td>

               <%= link_to("Edit", edit_admin_job_path(job) , class: "btn btn-sm btn-default") %> |
               <%= link_to("Destroy", admin_job_path(job),     class: "btn btn-sm btn-default", method: :delete, data: {confirm: "Are you sure?"}) %>

          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
