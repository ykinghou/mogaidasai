<div class="col-md-12">

 <div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">排序
      <span class="caret"></span>
  </button>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
      <li><%= link_to("按照薪金下限排序", jobs_path(:order => "by_lower_bound"))%></li>
      <li><%= link_to("按照薪金上限排序", jobs_path(:order => "by_upper_bound"))%></li>
      <li><%= link_to("按照发布时间排序", jobs_path)%></li>
  </ul>
 </div>


  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>wage_lower_bound</td>
        <td>wage_upper_bound</td>
        <td>Last Update</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
       <tr>
         <td>#</td>
         <td><%= link_to(job.title, job_path(job)) %></td>
         <td><%= job.wage_lower_bound %></td>
         <td><%= job.wage_upper_bound %></td>
         <td><%= job.updated_at %></td>
         <td>
           <% if current_user && current_user == job.user %>
              <%= link_to("Edit", edit_job_path(job) , class: "btn btn-sm btn-default") %>
              <%= link_to("Delete", job_path(job),     class: "btn btn-sm btn-default", method: :delete, data: {confirm: "Are you sure?"}) %>
           <% end %>
         </td>
       </tr>
      <% end %>
    </tbody>
  </table>
</div>
