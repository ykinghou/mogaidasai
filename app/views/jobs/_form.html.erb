<%= simple_form_for @job do |f| %>

   <%= f.input :title %>
   <%= f.input :description %>
   <%= f.input :wage_upper_bound, :lable => "薪金上限" %>
   <%= f.input :wage_lower_bound, :lable => "薪金下限" %>
   <%= f.input :contact_email %>
   <%= f.input :is_hidden %>

   <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: 'Submiting...'} %>
<% end %>
